<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="serif-monospace"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/fmd"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/txtpergunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <RadioButton
        android:id="@+id/alt1"
        android:layout_width="261dp"
        android:layout_height="34dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="91dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/alt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpergunta" />

    <RadioButton
        android:id="@+id/alt2"
        android:layout_width="261dp"
        android:layout_height="34dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="91dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/alt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alt1" />

    <RadioButton
        android:id="@+id/alt3"
        android:layout_width="261dp"
        android:layout_height="34dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="91dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/alt4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alt2" />

    <RadioButton
        android:id="@+id/alt4"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="334dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alt3" />

    <TextView
        android:id="@+id/txtpergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="175dp" />

    <TextView
        android:id="@+id/txtnumper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:text=" "
        app:layout_constraintEnd_toStartOf="@+id/txtpergunta"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="201dp"
        android:backgroundTint="#3F51B5"
        android:tint="#F9F8FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alt4"
        app:srcCompat="@android:drawable/ic_media_ff" />
</android.support.constraint.ConstraintLayout>