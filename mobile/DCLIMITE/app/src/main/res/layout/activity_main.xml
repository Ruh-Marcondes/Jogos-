<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_ranking"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginTop="192dp"
        android:text="@string/btn_ranking"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#6822E4"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/btn_start"
        tools:layout_editor_absoluteX="134dp" />

    <LinearLayout
        android:id="@+id/layout_principal"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="270dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_facil"
                    android:layout_width="56dp"
                    android:layout_height="49dp"
                    android:backgroundTint="#217DE1"
                    app:srcCompat="@android:drawable/ic_media_play" />

                <TextView
                    android:id="@+id/txt_f"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:fontFamily="serif-monospace"
                    android:text="Fácil"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_dificil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#217DE1"
                    app:srcCompat="@android:drawable/ic_media_play" />

                <TextView
                    android:id="@+id/txt_m"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:fontFamily="serif-monospace"
                    android:text="Médio"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_médio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#217DE1"
                    app:srcCompat="@android:drawable/ic_media_play" />

                <TextView
                    android:id="@+id/txt_D"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:fontFamily="serif-monospace"
                    android:text="Dificil"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_start"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="@string/btn_start"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#6822E4"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="195dp" />

</android.support.constraint.ConstraintLayout>

